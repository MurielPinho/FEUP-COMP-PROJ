}
{
    name = <INTEGERLITERAL> {jjtThis.val = name.image;} #IntegerLiteral(0)
    | <TRUE> #True(0)
    | <FALSE> #False(0)
    | <THIS> #This(0)
    | (<NEW> ((name = <IDENTIFIER> {jjtThis.val = name.image;} <LPAR> <RPAR>) #ConstructorClass(0)
             |(<INT> <LRPAR> Expression() <RRPAR> #ConstructorIntArray)))
