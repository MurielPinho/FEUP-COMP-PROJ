void While():{}
{
    try{
        <WHILE> WhileExpression()
    }
    catch(ParseException e) {
        handleWhileExpressionError(e);
    }
    WhileBody()
}

void WhileExpression():{}
{
    <LPAR> Expression() <RPAR>
