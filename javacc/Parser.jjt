}

void Expression() #void: {}
{
    Expression2() Expression1()
}

void Expression1() #void:{}
{
    (Expression4()
    | ArrayIndex())?
}

void Expression2() #void:{
  Token name;
}
{
    Expression3() | name = <IDENTIFIER> {jjtThis.val = name.image;} #Var(0)
